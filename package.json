{
  "name": "mcp-server-manager",
  "version": "1.0.0",
  "description": "A local desktop app to manage MCP servers in Claude config",
  "main": "electron-main-ipc.js",
  "scripts": {
    "start": "node server.js",
    "start-web": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "keywords": [
    "mcp",
    "claude",
    "config",
    "manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.mcpmanager.app",
    "productName": "MCP Server Manager",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "files": [
      "electron-main-ipc.js",
      "preload.js",
      "public/**/*",
      "assets/**/*"
    ]
  }
}
