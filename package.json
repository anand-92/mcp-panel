{
  "name": "mcp-server-manager",
  "version": "1.0.0",
  "description": "A local desktop app to manage MCP servers in Claude config",
  "main": "electron-main-ipc.js",
  "scripts": {
    "start": "node server.js",
    "start-web": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "keywords": [
    "mcp",
    "claude",
    "config",
    "manager"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "animate.css": "^4.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "notyf": "^3.10.0",
    "open": "^8.4.2",
    "prismjs": "^1.30.0",
    "sortablejs": "^1.15.6",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.mcpmanager.app",
    "productName": "MCP Server Manager",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "dmg": {
      "format": "UDBZ",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "electron-main-ipc.js",
      "preload.js",
      "public/**/*",
      "assets/**/*",
      "!public/**/*.backup",
      "!public/**/*-original.*",
      "!public/**/*-modern.*",
      "!public/app.js.backup",
      "!**/*.map",
      "!**/node_modules/**"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
