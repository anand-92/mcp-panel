{
  "name": "mcp-server-manager",
  "version": "1.5.0",
  "description": "A local desktop app to manage MCP servers in Claude config",
  "main": "electron-main-ipc.js",
  "scripts": {
    "start": "npm run build:renderer && node server.js",
    "start-web": "npm run build:renderer && node server.js",
    "dev": "nodemon server.js",
    "dev:renderer": "vite --config renderer/vite.config.mjs",
    "build:renderer": "vite build --config renderer/vite.config.mjs",
    "preview:renderer": "vite preview --config renderer/vite.config.mjs",
    "electron": "npm run build:renderer && electron .",
    "build-mac": "npm run build:renderer && electron-builder --mac",
    "build-mas": "npm run build:renderer && electron-builder --mac mas",
    "dist": "npm run build:renderer && electron-builder"
  },
  "keywords": [
    "mcp",
    "claude",
    "config",
    "manager"
  ],
  "author": {
    "name": "Nikhil Anand",
    "email": "nik.anand.1998@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "animate.css": "^4.1.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fuse.js": "^7.1.0",
    "notyf": "^3.10.0",
    "open": "^8.4.2",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^2.1.2",
    "sortablejs": "^1.15.6",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.6",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "electron": "^27.3.11",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.5.4",
    "vite": "^5.4.6"
  },
  "build": {
    "appId": "com.mcpmanager.app",
    "productName": "MCP Server Manager",
    "artifactName": "MCP-Server-Manager.${ext}",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "LSMinimumSystemVersion": "12.0"
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "mas": {
      "type": "distribution",
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "provisioningProfile": "embedded.provisionprofile",
      "minimumSystemVersion": "12.0",
      "extendInfo": {
        "LSMinimumSystemVersion": "12.0"
      },
      "asarUnpack": [
        "**/*.node"
      ],
      "target": [
        {
          "target": "mas",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "format": "UDBZ",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "files": [
      "electron-main-ipc.js",
      "preload.js",
      "renderer/dist/**/*",
      "assets/**/*",
      "!**/*.map",
      "!**/node_modules/**"
    ],
    "asar": true,
    "compression": "maximum",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  }
}
