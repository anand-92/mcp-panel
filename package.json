{
  "name": "mcp-server-manager",
  "version": "1.0.0",
  "description": "A local desktop app to manage MCP servers in Claude config",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder"
  },
  "keywords": ["mcp", "claude", "config", "manager"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.mcpmanager.app",
    "productName": "MCP Server Manager",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ]
  }
}