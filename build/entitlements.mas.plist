<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Mac App Store specific entitlements -->

    <!-- App Sandbox is required for Mac App Store -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- File access for reading/writing Claude config -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow read/write to home directory for .claude.json -->
    <key>com.apple.security.temporary-exception.files.home-relative-path.read-write</key>
    <array>
        <string>.claude.json</string>
        <string>.mcp-manager/</string>
    </array>

    <!-- Network client for registry lookups -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Required for Electron to function -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
