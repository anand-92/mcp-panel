<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App identifier for TestFlight/App Store -->
    <key>com.apple.application-identifier</key>
    <string>NW6B3R27LQ.com.mcpmanager.app</string>
    <key>com.apple.developer.team-identifier</key>
    <string>NW6B3R27LQ</string>

    <!-- App Sandbox is REQUIRED for Mac App Store -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- File access - needed to read/write user-selected config files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow reading user-selected files (for config files) -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>

    <!-- Security-scoped bookmarks for persistent file access -->
    <key>com.apple.security.files.bookmarks.app-scope</key>
    <true/>

    <!-- Network client - if app needs internet (MCP servers might) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- App Groups - required for widget to receive server data from main app -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.anand-92.mcp-panel</string>
    </array>
</dict>
</plist>
