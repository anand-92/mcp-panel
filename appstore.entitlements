<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App identifier for TestFlight/App Store -->
    <key>com.apple.application-identifier</key>
    <string>NW6B3R27LQ.com.mcpmanager.app</string>
    <key>com.apple.developer.team-identifier</key>
    <string>NW6B3R27LQ</string>

    <!-- App Sandbox is REQUIRED for Mac App Store -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- File access - needed to read/write ~/.claude.json and ~/.settings.json -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Allow reading user-selected files (for config files) -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>

    <!-- Network client - if app needs internet (MCP servers might) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Outgoing network connections -->
    <key>com.apple.security.network.server</key>
    <false/>

    <!-- Allow access to home directory (needed for ~/.claude.json) -->
    <key>com.apple.security.temporary-exception.files.home-relative-path.read-write</key>
    <array>
        <string>.claude.json</string>
        <string>.settings.json</string>
        <string>.mcp-manager/</string>
    </array>
</dict>
</plist>
