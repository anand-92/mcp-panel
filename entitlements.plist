<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- DMG Distribution Entitlements (Non-Sandboxed for Sparkle updates) -->
    <!-- Note: App Store builds MUST use appstore.entitlements instead -->

    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- IMPORTANT: Sandboxing is DISABLED for DMG builds to allow Sparkle updates -->
    <!-- Sparkle's installer cannot work properly in a sandboxed environment -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Network access for downloading updates and checking MCP registry -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for reading/writing config files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>

    <!-- Hardened Runtime flags (required for notarization) -->
    <key>com.apple.security.cs.disable-executable-page-protection</key>
    <true/>

    <!-- App Groups - for widget communication (required even without sandbox for consistency) -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.anand-92.mcp-panel</string>
    </array>
</dict>
</plist>
